<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.spoutcraft</groupId>
  <artifactId>launcher</artifactId>
  <name>Love Launcher</name>
  <version>1.0.0-${buildNumber}</version>
  <description>Custom launcher for installing and updating Modpacks with built-in byte patching for easy upgrading/downgrading of Minecraft versions.</description>
  <url>http://loveplatform.kytech.it/</url>
  <inceptionYear>2013</inceptionYear>
  <licenses>
    <license>
      <name>Spout License Version 1</name>
      <url>http://cdn.spout.org/license/spoutv1.txt</url>
      <distribution>repo</distribution>
      <comments>GNU Lesser General Public License Version 3, but with a provision that files are released under the MIT license 180 days after they are published</comments>
    </license>
  </licenses>
  <scm>
    <connection>scm:git:git://github.com/hitech95/lovelauncher.git</connection>
    <developerConnection>scm:git:git@github.com:hitech95/lovelauncher.git</developerConnection>
    <url>https://github.com/hitech95/lovelauncher.git</url>
  </scm>
  <organization>
    <name>TuttoCrafting</name>
    <url>http://www.youtube.com/user/TuttoCrafting</url>
  </organization>
  <build>
    <defaultGoal>clean install</defaultGoal>
    <resources>
      <resource>
        <targetPath>.</targetPath>
        <directory>${project.basedir}</directory>
        <includes>
          <include>LICENSE.txt</include>
        </includes>
      </resource>
      <resource>
        <targetPath>org/spoutcraft/launcher/resources</targetPath>
        <directory>${project.basedir}/src/main/resources</directory>
        <includes>
          <include>**/*</include>
        </includes>
        <excludes>
          <exclude>app/*</exclude>
          <exclude>exe/*</exclude>
          <exclude>jalopy.xml</exclude>
        </excludes>
      </resource>
      <resource>
        <targetPath>org/spoutcraft/launcher/resources</targetPath>
        <filtering>true</filtering>
        <directory>${project.basedir}/src/main/resources</directory>
        <includes>
          <include>version</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>com.mycila.maven-license-plugin</groupId>
        <artifactId>maven-license-plugin</artifactId>
        <version>1.10.b1</version>
        <executions>
          <execution>
            <phase>clean</phase>
            <goals>
              <goal>format</goal>
            </goals>
            <configuration>
              <properties>
                <name>${project.name}</name>
                <url>${project.organization.url}</url>
                <copyright>Copyright (c) ${project.inceptionYear}-${currentYear}, ${project.organization.name}</copyright>
              </properties>
              <quiet>true</quiet>
              <encoding>UTF-8</encoding>
              <strictCheck>true</strictCheck>
              <header>${basedir}/HEADER.txt</header>
              <mapping>
                <java>SLASHSTAR_STYLE</java>
              </mapping>
              <keywords>
                <keyword>${project.name}</keyword>
                <keyword>license</keyword>
              </keywords>
              <includes>
                <include>src/main/java/**</include>
                <include>src/test/java/**</include>
              </includes>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.0</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
          <compilerArguments>
            <O>-Xlint:all</O>
            <O>-Xlint:-path</O>
          </compilerArguments>
          <showWarnings>true</showWarnings>
          <showDeprecation>true</showDeprecation>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.4</version>
        <configuration>
          <archive>
            <manifest>
              <mainClass>${mainClass}</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <minimizeJar>true</minimizeJar>
              <filters>
                <filter>
                  <artifact>org.spoutcraft:*</artifact>
                  <includes>
                    <include>**</include>
                  </includes>
                </filter>
                <filter>
                  <artifact>org.jdom:jdom</artifact>
                  <includes>
                    <include>org/jdom/**</include>
                  </includes>
                </filter>
                <filter>
                  <artifact>rome:rome</artifact>
                  <includes>
                    <include>com/sun/syndication/**</include>
                  </includes>
                </filter>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.txt</exclude>
                    <exclude>META-INF/info.xml</exclude>
                    <exclude>META-INF/ASL2.0</exclude>
                    <exclude>META-INF/LICENSE</exclude>
                    <exclude>META-INF/NOTICE</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>static_build_number</id>
      <properties>
        <buildNumber>0</buildNumber>
      </properties>
    </profile>
    <profile>
      <id>dynamic_build_number</id>
      <properties>
        <buildNumber>${env.BUILD_NUMBER}</buildNumber>
      </properties>
    </profile>
    <profile>
      <id>package-win</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.bluestemsoftware.open.maven.plugin</groupId>
            <artifactId>launch4j-plugin</artifactId>
            <version>1.5.0.0</version>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>launch4j</goal>
                </goals>
                <configuration>
                  <headerType>gui</headerType>
                  <stayAlive>false</stayAlive>
                  <singleInstance>
                    <mutexName>Love Launcher</mutexName>
                    <windowTitle>Love Launcher</windowTitle>
                  </singleInstance>
                  <jar>C:\Users\Nicolò\Documents\NetBeansProjects\Love Pack\target/launcher-1.0.0-0.jar</jar>
                  <outfile>C:\Users\Nicolò\Documents\NetBeansProjects\Love Pack\target/launcher-1.0.0-0.exe</outfile>
                  <classPath>
                    <mainClass>org.spoutcraft.launcher.entrypoint.Start</mainClass>
                    <addDependencies>false</addDependencies>
                    <preCp>anything</preCp>
                  </classPath>
                  <jre>
                    <minVersion>1.5.0</minVersion>
                  </jre>
                  <icon>C:\Users\Nicolò\Documents\NetBeansProjects\Love Pack/src/main/resources/exe/icon.ico</icon>
                  <versionInfo>
                    <fileVersion>2.0.0.0</fileVersion>
                    <txtFileVersion>2.0.0.0</txtFileVersion>
                    <productVersion>2.0.0.0</productVersion>
                    <txtProductVersion>2.0.0.0</txtProductVersion>
                    <fileDescription>Love Launcher</fileDescription>
                    <productName>Love Launcher</productName>
                    <copyright>TuttoCrafting, http://www.youtube.com/user/TuttoCrafting</copyright>
                    <internalName>launcher</internalName>
                    <originalFilename>launcher.exe</originalFilename>
                  </versionInfo>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>package-mac</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.spout</groupId>
            <artifactId>osxapp-maven-plugin</artifactId>
            <version>1.1-SNAPSHOT</version>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>bundle</goal>
                </goals>
                <configuration>
                  <mainClass>${mainClass}</mainClass>
                  <bundleName>${project.name}</bundleName>
                  <version>${project.version}</version>
                  <iconFile>${project.basedir}/src/main/resources/app/icon.icns</iconFile>
                  <dictionaryFile>${project.basedir}/src/main/resources/app/Info.plist.template</dictionaryFile>
                  <javaApplicationStub>${project.basedir}/src/main/resources/app/JavaApplicationStub</javaApplicationStub>
                  <zipFile>${project.build.directory}/${project.build.finalName}-app.zip</zipFile>
                  <internetEnable>true</internetEnable>
                  <jvmVersion>1.5+</jvmVersion>
                  <vmOptions>-Xms512M -Xmx1024M -Xdock:name=Spoutcraft -Xdock:icon="icon.icns"</vmOptions>
                  <excludeArtifactIds>
                    <excludeArtifactId>commons-io</excludeArtifactId>
                    <excludeArtifactId>commons-codec</excludeArtifactId>
                    <excludeArtifactId>jackson-core-asl</excludeArtifactId>
                    <excludeArtifactId>jackson-mapper-asl</excludeArtifactId>
                    <excludeArtifactId>jcommander</excludeArtifactId>
                    <excludeArtifactId>jdom</excludeArtifactId>
                    <excludeArtifactId>rome</excludeArtifactId>
                    <excludeArtifactId>snakeyaml</excludeArtifactId>
                    <excludeArtifactId>swing-layout</excludeArtifactId>
                    <excludeArtifactId>swing-worker</excludeArtifactId>
                  </excludeArtifactIds>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <repositories>
    <repository>
      <snapshots>
        <updatePolicy>always</updatePolicy>
      </snapshots>
      <id>spout-repo</id>
      <url>http://repo.spout.org</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>spout-repo</id>
      <url>http://repo.spout.org</url>
    </pluginRepository>
  </pluginRepositories>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.11</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>hamcrest-core</artifactId>
          <groupId>org.hamcrest</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <buildNumber>0</buildNumber>
    <mainClass>${project.groupId}.${project.artifactId}.entrypoint.Start</mainClass>
    <currentYear>2013</currentYear>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>

